<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">
    <persistence-unit name="myPersistenceUnit">
        <properties>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://172.18.0.2/MysticHome_Creation"/>
            <property name="jakarta.persistence.jdbc.user" value="user"/>
            <property name="jakarta.persistence.jdbc.password" value="myuser1234"/>
